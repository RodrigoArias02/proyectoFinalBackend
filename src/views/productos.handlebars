<h3>Bienvenido {{login.nombre}}{{login.apellido}} </h3>
<h4>email: {{login.email}} </h4>
<h4>age: {{login.age}} </h4>



<h4>Rol: {{login.rol}} </h4>
<input type="text" id="idcarrito" value="{{login.carrito}}" placeholder="Escriba id de carrito">
<div id="productContainer">
  {{#each productos}}
    <div>
      <p><b>id:</b>{{this._id}}</p>
      <p><b>Titulo: </b>{{this.title}}</p>
      <p>${{this.price}}</p>
      <p><b>Descripcion: </b>{{this.description}}</p>
      <p><b>Stock: </b>{{this.stock}}</p>
      <p><b>Category: </b>{{this.category}}</p>
      <img src="{{this.thumbnail}}" width="400px" alt="" />
    </div>
    <button data-id="{{this._id}}" class="btnEnviarId">AÃ±adir al carrito</button>

    <hr />
  {{/each}}
</div>
<a href="?pagina=1">1.Pag</a>
